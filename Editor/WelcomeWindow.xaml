<Window x:Class="Editor.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Earth Engine - Home" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ProjectButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource AccentBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="🌍 Earth Engine" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Game Development Engine" 
                           FontSize="16" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Projects -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Margin="0,0,10,0" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Recent Projects" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                        <StackPanel x:Name="RecentProjectsPanel">
                            <!-- Recent projects will be populated here -->
                        </StackPanel>
                    </ScrollViewer>
                    
                    <Button x:Name="OpenProjectButton" 
                            Content="Open Project..." 
                            Margin="0,15,0,0" 
                            Padding="10,5" 
                            Click="OpenProjectButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          Background="{DynamicResource BorderBrush}" 
                          HorizontalAlignment="Center"/>

            <!-- New Project -->
            <Border Grid.Column="2" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Margin="10,0,0,0" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Create New Project" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Project Name:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ProjectNameTextBox" 
                             Margin="0,0,0,15" 
                             Text="MyGame"/>
                    
                    <TextBlock Text="Location:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ProjectLocationTextBox" 
                                 Grid.Column="0" 
                                 IsReadOnly="True"/>
                        <Button x:Name="BrowseLocationButton" 
                                Grid.Column="1" 
                                Content="Browse" 
                                Margin="5,0,0,0" 
                                Padding="10,5" 
                                Click="BrowseLocationButton_Click"/>
                    </Grid>
                    
                    <TextBlock Text="Template:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="TemplateComboBox" 
                              Margin="0,0,0,15" 
                              SelectionChanged="TemplateComboBox_SelectionChanged"/>
                    
                    <TextBlock x:Name="TemplateDescriptionText" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,15" 
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    
                    <Button x:Name="CreateProjectButton" 
                            Content="Create Project" 
                            Padding="10,5" 
                            Click="CreateProjectButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Version 1.0.0" 
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBlock Text=" | " 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="10,0"/>
                <TextBlock Text="© 2025 Earth Engine" 
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 