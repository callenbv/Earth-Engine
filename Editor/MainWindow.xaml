<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Editor"
        Title="Game Engine Editor" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <DockPanel>
        <Menu DockPanel.Dock="Top"
              ItemContainerStyle="{StaticResource MenuBarItemStyle}">
            <MenuItem Header="File">
              <MenuItem Header="Home"
                    Click="HomeMenuItem_Click"
                    Style="{StaticResource DropdownMenuItemStyle}" />
              <MenuItem Header="Exit"
                    Click="ExitMenuItem_Click"
                    Style="{StaticResource DropdownMenuItemStyle}" />
            </MenuItem>

            <MenuItem Header="Edit">
                <!-- Add edit options here -->
            </MenuItem>
            <MenuItem Header="Help">
                <!-- Add help options here -->
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Assets">
                <!-- Existing asset/inspector UI -->
                <DockPanel>
                    <ToolBar DockPanel.Dock="Top">
                        <Button x:Name="PlayButton"
                                Content="▶ Play (F5)"
                                FontSize="14"
                                Padding="10,5"
                                Click="PlayButton_Click"/>
                        <Button x:Name="OpenVSButton"
                                Content="Open Visual Studio"
                                FontSize="14"
                                Padding="10,5"
                                Click="OpenVSButton_Click"/>
                        <ProgressBar x:Name="ScriptCompileProgressBar" Width="200" Height="18" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed" Margin="10,0,0,0"/>
                        <TextBlock x:Name="ScriptCompileStatus" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </ToolBar>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel Grid.Column="0">
                            <TextBlock DockPanel.Dock="Top"
                                       Text="Assets"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="10,10,10,5"/>
                            <TreeView x:Name="AssetTreeView"
                                      Style="{StaticResource DarkTreeView}"
                                      Margin="10,0,10,10"
                                      SelectedItemChanged="AssetTreeView_SelectedItemChanged"
                                      MouseDoubleClick="AssetTreeView_MouseDoubleClick"
                                      MouseLeftButtonUp="AssetTreeView_MouseLeftButtonUp"
                                      PreviewMouseRightButtonDown="AssetTreeView_PreviewMouseRightButtonDown"
                                      PreviewMouseDown="AssetTreeView_PreviewMouseDown"
                                      AllowDrop="True"
                                      PreviewMouseMove="AssetTreeView_PreviewMouseMove"
                                      Drop="AssetTreeView_Drop"
                                      PreviewKeyDown="AssetTreeView_PreviewKeyDown"/>
                        </DockPanel>
                        <DockPanel Grid.Column="1" Margin="10">
                            <TextBlock DockPanel.Dock="Top"
                                       Text="Inspector"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            <StackPanel x:Name="InspectorPanel" AllowDrop="True" Drop="InspectorPanel_Drop"/>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Rooms" />
            <TabItem Header="Game Options" />
        </TabControl>
    </DockPanel>
</Window>