<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Editor"
        Title="Game Engine Editor" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <DockPanel>
        <TabControl>
            <TabItem Header="Assets">
                <!-- Existing asset/inspector UI -->
                <DockPanel>
                    <ToolBar DockPanel.Dock="Top">
                        <Button x:Name="PlayButton"
                                Content="▶ Play (F5)"
                                FontSize="14"
                                Padding="10,5"
                                Click="PlayButton_Click"/>
                    </ToolBar>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel Grid.Column="0">
                            <TextBlock DockPanel.Dock="Top"
                                       Text="Assets"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="10,10,10,5"/>
                            <TreeView x:Name="AssetTreeView"
                                      Margin="10,0,10,10"
                                      SelectedItemChanged="AssetTreeView_SelectedItemChanged"
                                      MouseDoubleClick="AssetTreeView_MouseDoubleClick"
                                      PreviewMouseRightButtonDown="AssetTreeView_PreviewMouseRightButtonDown"
                                      AllowDrop="True"
                                      PreviewMouseMove="AssetTreeView_PreviewMouseMove"
                                      Drop="AssetTreeView_Drop"/>
                        </DockPanel>
                        <DockPanel Grid.Column="1" Margin="10">
                            <TextBlock DockPanel.Dock="Top"
                                       Text="Inspector"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            <StackPanel x:Name="InspectorPanel" AllowDrop="True" Drop="InspectorPanel_Drop"/>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Rooms">
                <local:RoomEditor/>
            </TabItem>
            <TabItem Header="Game Options">
                <local:GameOptionsEditor/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>